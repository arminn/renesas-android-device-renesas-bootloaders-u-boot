if TARGET_ULCB

config SYS_SOC
	default "rmobile"

config SYS_BOARD
	default "ulcb"

config SYS_VENDOR
	default "renesas"

config SYS_CONFIG_NAME
	default "ulcb"

config FASTBOOT_BY_SW
bool "Enter fastboot by SW3"
	default n
	depends on R8A7795 || R8A7796
	help
	  Allows to enter at fastboot mode while
	  holding down SW3 button

config DEFAULT_IPL_IMAGE_SIZE
int "Default IPL image size"
	default 4194304
	depends on R8A7795 || R8A7796
	help
	  Defines the default IPL image size

endif
